{
  "extends": "@linzjs/style/tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "build",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": "./",
    // When adding mappings here, make sure to also add them in jest.config.js & .storybook/main.js
    "paths": {
      "src/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
    },
  },
  "exclude": [
    "allure-report",
    "allure-results",
  ],
  "include": [
    "config",
    "src",
    "test",
    ".eslintrc.js",
    "**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
